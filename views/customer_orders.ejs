<%- include('header')-%>

<body class="text-center">

<%- include('menuStrip', {privilegeLevel: 1}) -%>


<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <p><br/></p>

    <main role="main" class="inner cover">
        <h1 class="cover-heading">Rendelések</h1>
        <div class="row">
            <div class="col-md-2">&nbsp;</div>
            <div class="col-md-8">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            Rendelés ID
                        </th>
                        <th>
                            Kocsi kasztnija
                        </th>
                        <th>
                            Kocsi motorja
                        </th>
                        <th>
                            Kocsi színe
                        </th>
                        <th>
                            Kocsi üzemanyaga
                        </th>
                        <th>
                            Műveletek
                        </th>
                    </tr>

                    <% orders.forEach(function(order) { %>
                        <tr>
                            <td>
                                <%= order._id %>
                            </td>
                            <td>
                                <%= order.carFrame %>
                            </td>
                            <td>
                                <%= order.carEngine %>
                            </td>
                            <td>
                                <%= order.carColour %>
                            </td>
                            <td>
                                <%= order.carFuel %>
                            </td>
                            <td>
                                <a href="/customer/order/<%= customer._id %>/<%= order._id %>/edit"><i class="fas fa-edit"></i></a>
                                <a href="/customer/order/<%= customer._id %>/<%= order._id %>/del"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    <% }); %>

                </table>

                <a class="btn btn-primary" href="/customer/order/<%= customer._id %>/add">Rendelés hozzáadása</a>
                <br/>
                <a class="btn btn-link" href="/customer/list">Mégse</a>

            </div>
            <div class="col-md-2">&nbsp;</div>
        </div>
        <p>&nbsp;</p>
    </main>
</div>

<%- include('footer') -%>
