<%- include('header')-%>

<body class="text-center">

<%- include('menuStrip', {privilegeLevel: 1}) -%>

<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <p><br/></p>

    <main role="main" class="inner cover">
        <h1 class="cover-heading">Megrendelők</h1>
        <div class="row">
            <div class="col-md-2">&nbsp;</div>
            <div class="col-md-8">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            Megrendelő Neve
                        </th>
                        <th>
                            Megrendelő címe
                        </th>
                        <th>
                            Megrendelő Emailje
                        </th>
                        <th>
                            Rendelések száma
                        </th>
                        <th>
                            Műveletek
                        </th>
                    </tr>
                    <% customers.forEach(function(customer){ %>
                        <tr>
                            <td>
                                <%= customer.name %>
                            </td>
                            <td>
                                <%= customer.country+ ", " + customer.address %>
                            </td>
                            <td>
                                <%= customer.email %>
                            </td>
                            <td>
                                2
                            </td>
                            <td>
                                <a href="/customer/edit/<%= customer._id %>"><i class="fas fa-user-edit"></i></a>
                                <a href="/customer/del/<%= customer._id %>"><i class="fas fa-user-slash"></i></a>
                                <a href="/customer/order/<%= customer._id %>"><i class="far fa-list-alt"></i></a>
                            </td>
                        </tr>
                    <% }); %>

                </table>

                <a class="btn btn-primary" href="/customer/add">Megrendelő hozzáadása</a>
            </div>
            <div class="col-md-2">&nbsp;</div>
        </div>
        <p>&nbsp;</p>
    </main>
</div>

<%- include('footer') -%>