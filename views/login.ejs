<%- include('header') -%>

<body class="text-center">

    <div class="row" style="margin: 0 0 0 0">
        <div class="container col-md-3">
        <form class="form-signin" style="padding-top: 100px" method="post">
            <h1 class="h3 mb-3 font-weight-normal">Kérlek jelentkezz be</h1>

            <label for="inputUser" class="sr-only">E-mail cím</label>
            <input type="email" id="inputUser" class="form-control" placeholder="E-mail cím" required autofocus>
            <br />

            <label for="inputPassword" class="sr-only">Jelszó</label>
            <input type="password" id="inputPassword" class="form-control" placeholder="Jelszó" required>

            <div class="mb-3">Még nincs felhasználód? <a href="/register">Regisztrálj itt!</a></div>
            <div class="mb-3">Elfelejtetted a jelszavad? <a href="/lost_password">Kérj újat itt!</a></div>
            <input type="submit" class="btn btn-primary" aria-pressed="true" value="Bejelentkezés" />
            <a href="/" class="btn btn-link" role="button" aria-pressed="true">Vissza</a>
        </form>
        </div>
    </div>


<%- include('footer') -%>
